<h1><%= @task.title %> </h1>
<p><%= @task.detail %></p> 

<p> <%= link_to "Edit task", edit_path(@task) %> </p>
<p> <%= link_to "Back to task list", tasks_path %> </p>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

